		}
	},
	"styles": {
		"border": {
			"color": "#000000",
			"width": "4px"
		},
		"elements": {
			"button": {
				"border": {
					"width": "4px",
					"color": "#000000",
					"radius": "0px"
				},
				"color": {
					"background": "#00FF00",
					"text": "#000000"
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"bottom": "1rem",
						"left": "2rem",
						"right": "2rem"
					}
				}
			}
		}
