{
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "1000px",
			"wideSize": "1200px"
		},
		"color": {
			"palette": [
				{ "slug": "black", "color": "#000000", "name": "Black" },
				{ "slug": "white", "color": "#ffffff", "name": "White" },
				{ "slug": "neon-pink", "color": "#FF00FF", "name": "Neon Pink" },
				{ "slug": "neon-green", "color": "#00FF00", "name": "Neon Green" }
			]
		},
		"border": {
			"customRadius": true,
			"customWidth": true
		},
		"spacing": {
